<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <form class="product-form" action="/<% if (editing) { %>edit<% } else { %>add<% } %>" method="POST">
                    <% for (let i=0; i < headerCount; i++) { %>
                        <div class="form-control">
                            <label for="<%=headers[i]%>">
                                <%=display[i]%>
                            </label>
                            <input type="text" name="<%=headers[i]%>" id="<%=headers[i]%>"
                                value="<% if (editing) { %><%= row[i] %><% } %>">
                        </div>
                    <% } %>
                    <% if (editing) { %>
                        <input type="hidden" value="<%=pkValuesArr%>" name="pkValuesArr">
                        <input type="hidden" value="<%=pkSize%>" name="pkSize">
                    <% } %>
                    <input type="hidden" value="<%=table%>" name="table">
                    <input type="hidden" value="<%=headers%>" name="headers">
                    <button class="btn" type="submit">
                        <% if (editing) { %> Save Changes <% } else { %> Add <% } %>
                    </button>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>